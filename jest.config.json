{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "moduleFileExtensions": ["js", "json"],
  "transform": {
    "^.+\\.js$": "babel-jest"
  },
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/js/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "js/modules/**/*.js",
    "js/components/**/*.js",
    "!js/legacy/**/*.js",
    "!**/*.test.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "globals": {
    "L": {},
    "turf": {},
    "proj4": {}
  }
}
